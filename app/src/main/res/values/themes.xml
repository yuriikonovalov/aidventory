<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NightAdjusted.Theme.Aidventory" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- The final application theme to use -->
    <style name="Theme.Aidventory" parent="NightAdjusted.Theme.Aidventory" />

    <!-- Splash screen theme -->
    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/NightAdjusted.Theme.Aidventory</item>
    </style>
</resources>